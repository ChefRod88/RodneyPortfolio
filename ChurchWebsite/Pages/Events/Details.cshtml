@page
@model ChurchWebsite.Pages.Events.DetailsModel
@{
    ViewData["Title"] = Model.Event?.Title ?? "Event";
}

@if (Model.Event != null)
{
    <div class="container py-5">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Events/Index">Events</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Event.Title</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-lg-8">
                <h1 class="display-6 fw-bold mb-3">@Model.Event.Title</h1>

                <div class="mb-4">
                    <p class="text-muted mb-1">
                        <strong>@Model.Event.Date.ToString("dddd, MMMM d, yyyy")</strong>
                    </p>
                    <p class="text-muted mb-1">
                        @Model.Event.Date.ToString("h:mm tt")
                        @if (Model.Event.EndDate.HasValue)
                        {
                            <span> ‚Äì @Model.Event.EndDate.Value.ToString("h:mm tt")</span>
                        }
                    </p>
                    @if (!string.IsNullOrWhiteSpace(Model.Event.Location))
                    {
                        <p class="text-muted mb-0">üìç @Model.Event.Location</p>
                    }
                </div>

                <div class="mb-4">
                    <h5 class="fw-semibold mb-2">About This Event</h5>
                    <p class="text-muted">@Model.Event.Description</p>
                </div>

                <!-- RSVP Placeholder (no backend yet) -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold">RSVP</h5>
                        <p class="card-text text-muted small mb-3">Let us know you're coming. RSVP functionality will be available when the backend is connected.</p>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#rsvpModal">
                            RSVP to This Event
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm sticky-top">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold">Event Details</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2"><strong>Date:</strong> @Model.Event.Date.ToString("MMMM d, yyyy")</li>
                            <li class="mb-2"><strong>Time:</strong> @Model.Event.Date.ToString("h:mm tt")</li>
                            @if (!string.IsNullOrWhiteSpace(Model.Event.Location))
                            {
                                <li class="mb-2"><strong>Location:</strong> @Model.Event.Location</li>
                            }
                            @if (Model.Event.Capacity.HasValue)
                            {
                                <li><strong>Capacity:</strong> @Model.Event.Capacity</li>
                            }
                        </ul>
                        <a asp-page="/Events/Index" class="btn btn-outline-primary mt-3">Back to Events</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- RSVP Modal (placeholder) -->
    <div class="modal fade" id="rsvpModal" tabindex="-1" aria-labelledby="rsvpModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rsvpModalLabel">RSVP to @Model.Event.Title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted">RSVP functionality will be available when the backend and member authentication are added. For now, we're glad you're planning to attend!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Got it</button>
                </div>
            </div>
        </div>
    </div>
}
