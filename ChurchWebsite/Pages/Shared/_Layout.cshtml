@* ============================================
   SHARED LAYOUT - Wraps all pages
   USE CASE: Nav, footer, scripts shared site-wide
   LOCATION: Every page (via _ViewStart.cshtml)
   ============================================ *@
@* Inject church config and current request path for nav active state *@
@using ChurchWebsite.Models
@using Microsoft.Extensions.Options
@inject IOptions<ChurchSettings> ChurchOptions
@inject IHttpContextAccessor HttpContextAccessor
@{
    var church = ChurchOptions.Value;
    var path = HttpContextAccessor.HttpContext?.Request.Path.Value ?? "";
    /* IsActive: returns true if current path matches nav item (e.g. /About matches About dropdown) */
    bool IsActive(string page) => (page == "/" && (path == "/" || path == "")) || (page != "/" && path.StartsWith(page, StringComparison.OrdinalIgnoreCase));
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @church.Name</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bubblegum+Sans&family=Poppins:wght@400;500;600;700&family=Source+Sans+3:ital,wght@0,400;0,600;0,700;1,400&display=swap" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Playwrite+NZ+Basic+Guides&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChurchWebsite.styles.css" asp-append-version="true" />
</head>
@* home-page class: enables transparent nav + hero styling; only on Index *@
<body class="@((path == "/" || path == "") ? "home-page" : "")">
    @* SPLASH - Welcome screen on first visit per session; hidden via JS after 2.5s *@
    <div id="splashScreen" class="splash-screen" data-church-name="@church.Name" aria-hidden="true">
        <div class="splash-content">
            <p class="splash-text">Welcome to @church.Name</p>
            <div class="splash-loader" aria-label="Loading"></div>
        </div>
    </div>
    <script>
      (function(){if(sessionStorage.getItem('splashSeen')){var s=document.getElementById('splashScreen');if(s)s.classList.add('splash-removed');}})();
    </script>
    @* SKIP LINK - USE CASE: Accessibility; keyboard users jump to main content *@
    <a href="#main-content" class="visually-hidden-focusable btn btn-primary btn-sm position-fixed top-0 start-0 m-2" style="z-index: 9999;">Skip to main content</a>
    @* HEADER / NAV - USE CASE: Change nav links, dropdowns; LOCATION: Top of every page *@
    <header>
        @* Nav: bg-white on non-home pages; on home, site.js toggles navbar-transparent *@
        <nav class="navbar navbar-expand-lg navbar-light border-bottom box-shadow @((path != "/" && path != "") ? "bg-white" : "")" id="mainNav">
            <div class="container">
                @* Church name links to home *@
                <a class="navbar-brand fw-bold archivo-black" asp-page="/Index">@church.Name</a>
                @* Mobile hamburger - collapses nav on small screens *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto">
                        @* NAV: Home - USE CASE: Change label or route *@
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/") && path == "/" ? "active" : "")" asp-page="/Index">Home</a>
                        </li>
                        @* NAV: About dropdown - Location, Meet Our Team, Our Beliefs, Contact *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(IsActive("/About") ? "active" : "")" href="#" id="navAbout" data-bs-toggle="dropdown" aria-expanded="false">About</a>
                            <ul class="dropdown-menu" aria-labelledby="navAbout">
                                @* Location: opens Google Maps with church address *@
                                @if (!string.IsNullOrWhiteSpace(church.GoogleMapsUrl))
                                {
                                    <li><a class="dropdown-item" href="@church.GoogleMapsUrl" target="_blank" rel="noopener noreferrer">Location</a></li>
                                }
                                <li><a class="dropdown-item" asp-page="/About" asp-fragment="team">Meet Our Team</a></li>
                                <li><a class="dropdown-item" asp-page="/About" asp-fragment="beliefs">Our Beliefs</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-page="/About">Contact Us</a></li>
                            </ul>
                        </li>
                        @* NAV: Next Steps dropdown - Events, Groups, Request Prayer *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(IsActive("/Groups") || IsActive("/Events") ? "active" : "")" href="#" id="navNextSteps" data-bs-toggle="dropdown" aria-expanded="false">Next Steps</a>
                            <ul class="dropdown-menu" aria-labelledby="navNextSteps">
                                <li><a class="dropdown-item" asp-page="/Events/Index">Events</a></li>
                                <li><a class="dropdown-item" asp-page="/Groups/Index">Groups</a></li>
                                <li><a class="dropdown-item" asp-page="/Prayer">Request Prayer</a></li>
                            </ul>
                        </li>
                        @* NAV: Media dropdown - Sermons, Watch Live *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(IsActive("/Sermons") || IsActive("/Live") ? "active" : "")" href="#" id="navMedia" data-bs-toggle="dropdown" aria-expanded="false">Media</a>
                            <ul class="dropdown-menu" aria-labelledby="navMedia">
                                <li><a class="dropdown-item" asp-page="/Sermons/Index">Sermons</a></li>
                                <li><a class="dropdown-item" asp-page="/Live">Watch Live</a></li>
                            </ul>
                        </li>
                        @* NAV: Request Prayer - standalone link *@
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/Prayer") ? "active" : "")" asp-page="/Prayer">Request Prayer</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @* MAIN - Page content injected here via @RenderBody() *@
    <main id="main-content" role="main">
        @RenderBody()
    </main>

    

    @* SCRIPTS - jQuery, Bootstrap, site.js; pages can add more via @section Scripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
