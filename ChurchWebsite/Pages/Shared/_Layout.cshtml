@using ChurchWebsite.Models
@using Microsoft.Extensions.Options
@inject IOptions<ChurchSettings> ChurchOptions
@inject IHttpContextAccessor HttpContextAccessor
@{
    var church = ChurchOptions.Value;
    var path = HttpContextAccessor.HttpContext?.Request.Path.Value ?? "";
    bool IsActive(string page) => (page == "/" && (path == "/" || path == "")) || (page != "/" && path.StartsWith(page, StringComparison.OrdinalIgnoreCase));
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @church.Name</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bubblegum+Sans&family=Poppins:wght@400;500;600;700&family=Source+Sans+3:ital,wght@0,400;0,600;0,700;1,400&display=swap" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChurchWebsite.styles.css" asp-append-version="true" />
</head>
<body class="@((path == "/" || path == "") ? "home-page" : "")">
    <a href="#main-content" class="visually-hidden-focusable btn btn-primary btn-sm position-fixed top-0 start-0 m-2" style="z-index: 9999;">Skip to main content</a>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom box-shadow @((path != "/" && path != "") ? "bg-white" : "")" id="mainNav">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">@church.Name</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/") && path == "/" ? "active" : "")" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(IsActive("/About") ? "active" : "")" href="#" id="navAbout" data-bs-toggle="dropdown" aria-expanded="false">About</a>
                            <ul class="dropdown-menu" aria-labelledby="navAbout">
                                <li><a class="dropdown-item" asp-page="/About">New to @church.Name</a></li>
                                @if (!string.IsNullOrWhiteSpace(church.GoogleMapsUrl))
                                {
                                    <li><a class="dropdown-item" href="@church.GoogleMapsUrl" target="_blank" rel="noopener noreferrer">Location</a></li>
                                }
                                <li><a class="dropdown-item" asp-page="/About">Meet Our Team</a></li>
                                <li><a class="dropdown-item" asp-page="/About">Our Beliefs</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-page="/About">Contact Us</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(IsActive("/Groups") || IsActive("/Events") ? "active" : "")" href="#" id="navNextSteps" data-bs-toggle="dropdown" aria-expanded="false">Next Steps</a>
                            <ul class="dropdown-menu" aria-labelledby="navNextSteps">
                                <li><a class="dropdown-item" asp-page="/Events/Index">Events</a></li>
                                <li><a class="dropdown-item" asp-page="/Groups/Index">Groups</a></li>
                                <li><a class="dropdown-item" asp-page="/Prayer">Request Prayer</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(IsActive("/Sermons") || IsActive("/Live") ? "active" : "")" href="#" id="navMedia" data-bs-toggle="dropdown" aria-expanded="false">Media</a>
                            <ul class="dropdown-menu" aria-labelledby="navMedia">
                                <li><a class="dropdown-item" asp-page="/Sermons/Index">Sermons</a></li>
                                <li><a class="dropdown-item" asp-page="/Live">Watch Live</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/Prayer") ? "active" : "")" asp-page="/Prayer">Request Prayer</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main id="main-content" role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <div class="footer-item">
                        <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                        <div class="footer-contact-value">
                            <span class="footer-label d-block">Email</span>
                            @if (!string.IsNullOrWhiteSpace(church.Email))
                            {
                                <a href="mailto:@church.Email">@church.Email</a>
                            }
                            else { <span>—</span> }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="footer-item">
                        <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        <div class="footer-contact-value">
                            <span class="footer-label d-block">Find Us</span>
                            @if (!string.IsNullOrWhiteSpace(church.FullAddress))
                            {
                                <a href="@church.GoogleMapsUrl" target="_blank" rel="noopener noreferrer">@church.FullAddress</a>
                            }
                            else { <span>—</span> }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="footer-item">
                        <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                        <div class="footer-contact-value">
                            <span class="footer-label d-block">Call Us</span>
                            @if (!string.IsNullOrWhiteSpace(church.Phone))
                            {
                                <a href="tel:@church.Phone">@church.Phone</a>
                            }
                            else { <span>—</span> }
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center footer-copyright">
                &copy; @DateTime.Now.Year @church.Name. All rights reserved.
            </div>
            <div class="footer-socials d-flex gap-2 justify-content-center">
                @if (!string.IsNullOrWhiteSpace(church.SocialMedia.Facebook))
                {
                    <a href="@church.SocialMedia.Facebook" target="_blank" rel="noopener noreferrer" aria-label="Facebook"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg></a>
                }
                @if (!string.IsNullOrWhiteSpace(church.SocialMedia.Instagram))
                {
                    <a href="@church.SocialMedia.Instagram" target="_blank" rel="noopener noreferrer" aria-label="Instagram"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.265.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.058 1.645-.07 4.849-.07zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg></a>
                }
                @if (!string.IsNullOrWhiteSpace(church.SocialMedia.YouTube))
                {
                    <a href="@church.SocialMedia.YouTube" target="_blank" rel="noopener noreferrer" aria-label="YouTube"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg></a>
                }
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
